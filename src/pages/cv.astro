---
import Layout from "@/layouts/Layout.astro";
import HeroPrintable from "@/components/cv/Hero.astro";
import AboutPrintable from "@/components/cv/About.astro";
import ExperiencePrintable from "@/components/cv/Experience.astro";
import ProjectPrintable from "@/components/cv/Projects.astro";
import CertificatesPrintable from "@/components/cv/Certificates.astro";
import SkillsPrintable from "@/components/cv/Skills.astro";
---

<Layout title="CV" description="Portfolio printable version">
    <HeroPrintable />
    <AboutPrintable />
    <ExperiencePrintable />
    <CertificatesPrintable />
    <ProjectPrintable />
    <SkillsPrintable />
</Layout>
<style>
    html {
        font-family:
            Menlo,
            Monaco,
            Licuda Console,
            "Courier New",
            Courier,
            monospace;
        background: #fff;
        letter-spacing: -0.025;
    }

    h1,
    h2,
    h3 {
        color: black;
    }

    h4 {
        margin: 0;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }

    p {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
        text-wrap: pretty;
    }

    main {
        padding: 4rem;
        margin: auto;
        width: 100%;
    }

    .header-portfolio {
        display: none;
    }

    .footer-portfolio {
        display: none;
    }

    @page {
        size: auto;
        margin: 0mm;
    }
</style>
